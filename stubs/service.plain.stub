    public static function all{{ Modals }}( $request ) {

        ${{ modal }} = {{ Modal }}::with( [
        ] )->select( '{{ table }}.*' );

        $filterObject = self::filter( $request, ${{ modal }} );
        ${{ modal }} = $filterObject['model'];
        $filter = $filterObject['filter'];

        if ( $request->input( 'order.0.column' ) != 0 ) {
            $dir = $request->input( 'order.0.dir' );
            switch ( $request->input( 'order.0.column' ) ) {
                case 1:
                    ${{ modal }}->orderBy( 'created_at', $dir );
                    break;
            }
        }

        ${{ modal }}Count = ${{ modal }}->count();

        $limit = $request->length;
        $offset = $request->start;

        ${{ modals }} = ${{ modal }}->skip( $offset )->take( $limit )->get();

        ${{ modals }}->append( [
            'encrypted_id',
        ] );

        $data = [
            '{{ modals }}' => ${{ modals }},
            'draw' => $request->draw,
            'recordsFiltered' => $filter ? ${{ modal }}Count : {{ Modal }}::count(),
            'recordsTotal' => {{ Modal }}::count(),
        ];

        return $data;
    }

    private static function filter( $request, $model ) {

        $filter = false;

        if ( !empty( $request->registered_date ) ) {
            if ( str_contains( $request->registered_date, 'to' ) ) {
                $dates = explode( ' to ', $request->registered_date );

                $startDate = explode( '-', $dates[0] );
                $start = Carbon::create( $startDate[0], $startDate[1], $startDate[2], 0, 0, 0, 'Asia/Kuala_Lumpur' );
                
                $endDate = explode( '-', $dates[1] );
                $end = Carbon::create( $endDate[0], $endDate[1], $endDate[2], 23, 59, 59, 'Asia/Kuala_Lumpur' );

                $model->whereBetween( '{{ table }}.created_at', [ date( 'Y-m-d H:i:s', $start->timestamp ), date( 'Y-m-d H:i:s', $end->timestamp ) ] );
            } else {

                $dates = explode( '-', $request->registered_date );

                $start = Carbon::create( $dates[0], $dates[1], $dates[2], 0, 0, 0, 'Asia/Kuala_Lumpur' );
                $end = Carbon::create( $dates[0], $dates[1], $dates[2], 23, 59, 59, 'Asia/Kuala_Lumpur' );

                $model->whereBetween( '{{ table }}.created_at', [ date( 'Y-m-d H:i:s', $start->timestamp ), date( 'Y-m-d H:i:s', $end->timestamp ) ] );
            }
            $filter = true;
        }

        if ( !empty( $request->status ) ) {
            $model->where( '{{ table }}.status', $request->status );
            $filter = true;
        }     

        return [
            'filter' => $filter,
            'model' => $model,
        ];
    }

