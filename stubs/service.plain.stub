    public static function create{{ Modal }}( $request ) {

        DB::beginTransaction();

        $validator = Validator::make( $request->all(), [
            'name' => [ 'required' ],
        ] );

        $attributeName = [
            'name' => __( '{{ modal }}.name' ),
        ];

        foreach( $attributeName as $key => $aName ) {
            $attributeName[$key] = strtolower( $aName );
        }

        $validator->setAttributeNames( $attributeName )->validate();

        try {

            $create{{ Modal }}Object['{{ Modal }}'] = [
                'name' => $request->name,
                'status' => 10,
            ];
            $create{{ Modal }} = {{ Modal }}::create( $create{{ Modal }}Object );

            DB::commit();

        } catch ( \Throwable $th ) {

            DB::rollBack();

            return response()->json( [
                'message' => $th->getMessage() . ' in line: ' . $th->getLine()
            ], 500 );
        }

        return response()->json( [
            'message' => __( 'template.new_x_created', [ 'title' => Str::singular( __( 'template.{{ modals }}' ) ) ] ),
        ] );
    }

